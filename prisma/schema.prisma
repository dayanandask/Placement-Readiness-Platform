generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Student {
  id             String          @id @default(cuid())
  name           String
  email          String          @unique
  skills         String?         // JSON string for skills tracking
  atsScore       Int             @default(0)
  readinessIndex Float           @default(0)
  interviews     MockInterview[]
  createdAt      DateTime        @default(now())
}

model MockInterview {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  score     Int
  feedback  String?
  timestamp DateTime @default(now())
}
